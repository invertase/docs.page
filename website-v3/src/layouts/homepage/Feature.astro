---
type Props = {
  href?: string;
};

const { href } = Astro.props;
---

<div class="flex flex-col items-center justify-center p-3">
  <div class="flex flex-1 flex-col items-center justify-center">
    <slot name="icon" />
    <h4 class="font-anton my-8 text-5xl tracking-wide">
      <slot name="title" />
    </h4>
    <p class="min-h-[90px] leading-relaxed">
      <slot name="text" />
    </p>
  </div>
  <div class="mt-10">
    {!!href && (
      <a
      href={href}
      class="rounded border border-gray-600 px-6 py-2 no-underline transition-all duration-100 hover:border-gray-300 dark:hover:border-white"
    >
      Learn More
    </a>
    )}
    {!href && <div class="text-gray-400">Coming Soon...</div>}
  </div>
</div>