---
import Navigation from '@layouts/Navigation.astro';
import PreviousNext from '@components/PreviousNext.astro';
import Links from '@components/Links.astro';
import Meta from '@components/Meta.astro';
import Scripts from '@components/Scripts.astro';
import Styles from '@components/Styles.astro';
import Theme from '@components/Theme.astro';
import Markdown from '@components/Markdown';
import Header from '@layouts/Header.astro';
import Sidebar from '@layouts/Sidebar.astro';
import Footer from '@layouts/Footer.astro';
---

<>
  <Meta slot="head" />
  <Theme slot="head" fallback="#00bcd4" />
  <Scripts slot="head" />
  <Styles slot="head" />
  <Links slot="head" />
  <Header />
  <section class="max-w-8xl mx-auto px-4 sm:px-6 md:px-8">
    <div
      data-sidebar
      data-visible="false"
      class="fixed top-16 bottom-0 left-0 translate-x-[-46rem] lg:left-[max(0px,calc(50%-46rem))] lg:translate-x-0 right-auto z-20 w-[19.5rem] overflow-y-auto px-6 pb-10 sm:px-8 md:px-10 lg:block transition-transform data-[visible=true]:translate-x-0 data-[visible=true]:bg-white data-[visible=true]:dark:bg-zinc-900 data-[visible=true]:border-t dark:border-slate-800/80"
    >
      <Sidebar />
    </div>
    <div class="lg:pl-[20rem]">
      <div class="flex flex-row items-stretch gap-12 pt-9">
        <div
          class="relative mx-auto max-w-3xl flex-grow overflow-auto text-slate-500 dark:text-slate-400 xl:-ml-12 xl:max-w-[47rem] xl:pr-1 xl:pl-12"
        >
          <Markdown />
          <PreviousNext />
          <Footer />
        </div>
        <div class="z-10 hidden w-[17rem] flex-none pl-10 xl:flex">
          <nav class="fixed h-[calc(100%-8rem)] w-[16.5rem] overflow-y-auto text-sm leading-6">
            <Navigation />
          </nav>
        </div>
      </div>
    </div>
    <div data-docsearch></div>
    <div
      data-sidebar-mask
      data-visible="false"
      class="fixed inset-0 bg-zinc-900/50 backdrop-blur opacity-0 data-[visible=true]:opacity-100 z-10 transition-opacity lg:hidden data-[visible=false]:pointer-events-none"
    >
    </div>
  </section>
</>
